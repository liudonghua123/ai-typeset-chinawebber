{
  "manifest_version": 3,
  "name": "__MSG_extension_name__",
  "version": "1.0",
  "description": "__MSG_extension_description__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "scripting"
  ],
  "host_permissions": [
    "https://sites.ynu.edu.cn/*",
    "https://agent.ynu.edu.cn/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.openrouter.ai/*",
    "https://dashscope.aliyuncs.com/*",
    "https://api.lkeap.cloud.tencent.com/*",
    "https://api-inference.modelscope.cn/*",
    "https://ark.cn-beijing.volces.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://sites.ynu.edu.cn/system/site/column/news/addnews.jsp*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Typeset"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["modified_openeditor.js", "monaco-editor/**/*"],
      "matches": ["https://sites.ynu.edu.cn/*", "https://agent.ynu.edu.cn/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}